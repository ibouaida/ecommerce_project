# Configuration de l'application ecommerce
# Copiez ce fichier vers .env et modifiez selon vos besoins

# Base de données PostgreSQL
POSTGRES_DB=ecommerce_db
POSTGRES_USER=ecommerce_user
POSTGRES_PASSWORD=ecommerce_password

# Django Backend
DEBUG=False
DJANGO_SETTINGS_MODULE=ecommerce.settings
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:80

# Base de données Django
DATABASE_URL=postgresql://ecommerce_user:ecommerce_password@db:5432/ecommerce_db

# Redis
REDIS_URL=redis://redis:6379/0

# Frontend React
REACT_APP_API_URL=http://localhost:8000/api
NODE_ENV=production

# Monitoring
PROMETHEUS_ENABLED=true
ELASTICSEARCH_ENABLED=true

# SSL/TLS (optionnel)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem 